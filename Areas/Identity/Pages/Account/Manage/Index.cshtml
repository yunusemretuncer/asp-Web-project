@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
}

<h3>Profile</h3>
<hr />

<form id="profile-form" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!-- USERNAME (readonly) -->
    <div class="mb-3">
        <label asp-for="Username" class="form-label"></label>
        <input asp-for="Username" class="form-control" disabled />
    </div>

    <!-- PHONE -->
    <div class="mb-3">
        <label asp-for="Input.PhoneNumber" class="form-label"></label>
        <input asp-for="Input.PhoneNumber" class="form-control" />
        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
    </div>

    <!-- HEIGHT -->
    <div class="mb-3">
        <label class="form-label">Boy (cm)</label>
        <input asp-for="Input.Height" class="form-control" type="number" />
    </div>

    <!-- WEIGHT -->
    <div class="mb-3">
        <label class="form-label">Kilo (kg)</label>
        <input asp-for="Input.Weight" class="form-control" type="number" />
    </div>

    <!-- BODY TYPE -->
    <div class="mb-3">
        <label class="form-label">Vücut Tipi</label>
        <select asp-for="Input.BodyType" class="form-control">
            <option value="">Seçiniz</option>
            <option>Ectomorph</option>
            <option>Mesomorph</option>
            <option>Endomorph</option>
        </select>
    </div>

    <button id="update-profile-button" type="submit" class="btn btn-primary">
        Save
    </button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
