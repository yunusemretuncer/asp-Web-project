@model AspWebProject.Models.FitnessCenter

<div class="row justify-content-center mt-4">
    <div class="col-md-6">

        <div class="card shadow-sm border-0 border-danger">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">
                    <i class="bi bi-trash"></i> Fitness Center Sil
                </h4>
            </div>

            <div class="card-body">

                <h5 class="text-danger fw-bold">Bu merkezi silmek istediğinize emin misiniz?</h5>

                <dl class="row mt-3">

                    <dt class="col-sm-4 fw-bold">Adı</dt>
                    <dd class="col-sm-8">@Model.Name</dd>

                    <dt class="col-sm-4 fw-bold">Çalışma Saatleri</dt>
                    <dd class="col-sm-8">
                        @Model.OpenTime.ToString(@"hh\:mm") - @Model.CloseTime.ToString(@"hh\:mm")
                    </dd>

                </dl>

                <form asp-action="Delete" class="mt-3">
                    <input type="hidden" asp-for="Id" />

                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash-fill"></i> Sil
                        </button>

                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Vazgeç
                        </a>
                    </div>
                </form>

            </div>
        </div>

    </div>
</div>

<link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

