@model IEnumerable<AspWebProject.Models.FitnessCenter>

@{
    ViewData["Title"] = "Fitness Centers";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-success">🏋️ Fitness Centers</h2>

    <a asp-action="Create" class="btn btn-success shadow-sm px-4">
        <i class="bi bi-plus-lg"></i> Yeni Salon Ekle
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">

        <table class="table table-hover table-striped mb-0 align-middle">
            <thead class="table-success">
                <tr>
                    <th>Salon Adı</th>
                    <th>Çalışma Saatleri</th>
                    <th class="text-end">İşlemler</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="fw-semibold">@item.Name</td>

                        <td>
                            <span class="badge bg-success bg-opacity-75 px-3 py-2">
                                @item.OpenTime.ToString(@"hh\:mm") - @item.CloseTime.ToString(@"hh\:mm")
                            </span>
                        </td>

                        <td class="text-end">

                            <a asp-action="Edit" asp-route-id="@item.Id"
                               class="btn btn-sm btn-outline-primary me-1">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>

                            <a asp-action="Details" asp-route-id="@item.Id"
                               class="btn btn-sm btn-outline-info me-1">
                                <i class="bi bi-info-circle"></i> Details
                            </a>

                            <a asp-action="Delete" asp-route-id="@item.Id"
                               class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash"></i> Delete
                            </a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
