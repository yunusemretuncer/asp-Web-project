@model AspWebProject.Models.Trainer

@{
    ViewData["Title"] = "Trainer Details";
}

<h2 class="mb-4">
    <i class="bi bi-person-badge"></i> Eğitmen Detayları
</h2>

<div class="card shadow-sm p-4">

    <h3 class="mb-1">@Model.FullName</h3>
    <p class="text-muted mb-3">
        Uzmanlık: <strong>@Model.Expertise</strong>
    </p>

    <p><strong>Fitness Center:</strong> @Model.FitnessCenter?.Name</p>

    <hr />

    <h4 class="mb-2">Verdiği Hizmetler</h4>

    @if (Model.TrainerServices.Any())
    {
        <ul class="list-group mb-3">
            @foreach (var s in Model.TrainerServices)
            {
                <li class="list-group-item">
                    <i class="bi bi-dot"></i> @s.Service.Name
                </li>
            }
        </ul>
    }
    else
    {
        <p class="text-muted">Bu eğitmene hiçbir hizmet atanmadı.</p>
    }

    <hr />

    <h4 class="mb-2">Haftalık Çalışma Saatleri</h4>

    @if (Model.Availabilities.Any())
    {
        <ul class="list-group mb-3">
            @foreach (var a in Model.Availabilities.OrderBy(x => x.Day))
            {
                <li class="list-group-item">
                    <strong>@a.Day:</strong>
                    @a.StartTime.ToString(@"hh\:mm") — @a.EndTime.ToString(@"hh\:mm")
                </li>
            }
        </ul>
    }
    else
    {
        <p class="text-muted">Çalışma saatleri tanımlanmamış.</p>
    }

    <div class="mt-3 d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
            <i class="bi bi-pencil-square"></i> Edit
        </a>

        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Geri
        </a>
    </div>

</div>

