@model AspWebProject.Models.ViewModels.TrainerEditViewModel

@{
    ViewData["Title"] = "Edit Trainer";
}

<h1 class="mb-4">Edit Trainer</h1>

<div class="card shadow-sm p-4">

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Trainer.Id" />

        <!-- FullName -->
        <div class="form-group mb-3">
            <label asp-for="Trainer.FullName" class="form-label fw-bold"></label>
            <input asp-for="Trainer.FullName" class="form-control" />
            <span asp-validation-for="Trainer.FullName" class="text-danger"></span>
        </div>

        <!-- FitnessCenter -->
        <div class="form-group mb-3">
            <label asp-for="Trainer.FitnessCenterId" class="form-label fw-bold">Fitness Center</label>
            <select asp-for="Trainer.FitnessCenterId"
                    class="form-control"
                    asp-items="ViewBag.FitnessCenterId">
                <option value="">Bir salon seçiniz</option>
            </select>
            <span asp-validation-for="Trainer.FitnessCenterId" class="text-danger"></span>
        </div>

        <!-- Services - Create ile birebir görünüm -->
        <h4 class="mt-4 fw-bold">Bu eğitmenin verebileceği hizmetler</h4>

        <div class="border rounded p-3 mb-4" id="services-area">
            <ul class="list-group">
                @foreach (var s in Model.AllServices)
                {
                    <li class="list-group-item">
                        <input type="checkbox"
                               name="SelectedServiceIds"
                               value="@s.Id"
                               @(Model.SelectedServiceIds.Contains(s.Id) ? "checked" : "") />
                        @s.Name
                    </li>
                }
            </ul>
        </div>

        <!-- Availability - Create ile birebir satır yapısı -->
        <h4 class="mt-4 fw-bold">Haftalık Çalışma Saatleri</h4>

        <div class="p-2">
            @for (int i = 0; i < Model.Availabilities.Count; i++)
            {
                <div class="d-flex align-items-center border-bottom py-2">

                    <!-- Checkbox -->
                    <input type="checkbox"
                           class="form-check-input me-2"
                           name="Availabilities[@i].Enabled"
                           value="true"
                           @(Model.Availabilities[i].Enabled ? "checked" : "") />

                    <!-- Gün adı -->
                    <label class="me-3 fw-bold"
                           style="width:140px; font-size:0.9rem;">
                        @Model.Availabilities[i].Day
                    </label>

                    <input type="hidden"
                           name="Availabilities[@i].Day"
                           value="@Model.Availabilities[i].Day" />

                    <!-- Başlangıç -->
                    <div class="d-flex flex-column me-3">
                        <label class="form-label m-0" style="font-size:0.75rem;">Başlangıç</label>
                        <input type="time"
                               class="form-control form-control-sm"
                               style="width:120px;"
                               name="Availabilities[@i].StartTime"
                               value="@Model.Availabilities[i].StartTime" />
                    </div>

                    <!-- Bitiş -->
                    <div class="d-flex flex-column">
                        <label class="form-label m-0" style="font-size:0.75rem;">Bitiş</label>
                        <input type="time"
                               class="form-control form-control-sm"
                               style="width:120px;"
                               name="Availabilities[@i].EndTime"
                               value="@Model.Availabilities[i].EndTime" />
                    </div>
                </div>
            }
        </div>

        <button type="submit" class="btn btn-success mt-3">Kaydet</button>
        <a asp-action="Index" class="btn btn-secondary mt-3">Geri</a>

    </form>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

