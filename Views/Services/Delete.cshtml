@model AspWebProject.Models.Service

@{
    ViewData["Title"] = "Hizmeti Sil";
}

<h2 class="text-danger mb-3">Hizmeti Sil</h2>

<div class="card shadow p-4 border-danger">

    <div class="alert alert-danger">
        <strong>@Model.Name</strong> adlı hizmeti silmek istediğinize emin misiniz?
    </div>

    <p><strong>Süre:</strong> @Model.Duration saat</p>
    <p><strong>Ücret:</strong> @Model.Price ₺</p>
    <p><strong>Fitness Center:</strong> @Model.FitnessCenter?.Name</p>

    <hr />

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />

        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Sil
        </button>

        <a asp-action="Index" class="btn btn-secondary ms-2">
            <i class="bi bi-arrow-left"></i> Geri
        </a>
    </form>

</div>

