@model AspWebProject.Models.Service

@{
    ViewData["Title"] = "Hizmet Detayı";
}

<h2 class="mb-4">Hizmet Detayı</h2>

<div class="card shadow p-4">

    <h4 class="fw-bold">@Model.Name</h4>

    <hr />

    <p><strong>Süre:</strong> @Model.Duration saat</p>
    <p><strong>Ücret:</strong> @Model.Price ₺</p>
    <p><strong>Fitness Center:</strong> @Model.FitnessCenter?.Name</p>

    <hr />

    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">
        <i class="bi bi-pencil-square"></i> Düzenle
    </a>

    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Geri
    </a>

</div>
