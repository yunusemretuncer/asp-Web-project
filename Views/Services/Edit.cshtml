@model AspWebProject.Models.Service

@{
    ViewData["Title"] = "Hizmeti Düzenle";
}

<h2 class="mb-4">Hizmeti Düzenle</h2>

<div class="card shadow p-4">
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <!-- Name -->
        <div class="mb-3">
            <label asp-for="Name" class="form-label fw-bold"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!-- Duration -->
        <div class="mb-3">
            <label asp-for="Duration" class="form-label fw-bold"></label>
            <input asp-for="Duration" class="form-control" />
            <span asp-validation-for="Duration" class="text-danger"></span>
        </div>

        <!-- Price -->
        <div class="mb-3">
            <label asp-for="Price" class="form-label fw-bold"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <!-- Fitness Center -->
        <div class="mb-3">
            <label asp-for="FitnessCenterId" class="form-label fw-bold">Fitness Center</label>
            <select asp-for="FitnessCenterId" class="form-control" asp-items="ViewBag.FitnessCenterId"></select>
            <span asp-validation-for="FitnessCenterId" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">
            <i class="bi bi-check-circle"></i> Kaydet
        </button>

        <a asp-action="Index" class="btn btn-secondary ms-2">
            <i class="bi bi-arrow-left"></i> Geri
        </a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

