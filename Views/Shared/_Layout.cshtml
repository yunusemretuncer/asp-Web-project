<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AspWebProject</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AspWebProject.styles.css" asp-append-version="true" />

    <style>
        body {
            background: #f4f7f4;
        }

        /* ----------------- NAVBAR ----------------- */
        .navbar-custom {
            background-color: #2e7d32 !important;
            border-bottom: 4px solid #1b5e20;
        }

            .navbar-custom .navbar-brand,
            .navbar-custom .nav-link {
                color: white !important;
                font-weight: 500;
            }

                .navbar-custom .nav-link:hover {
                    color: #c8e6c9 !important;
                }

        /* ----------------- PAGE TITLE ----------------- */
        .page-title {
            color: #2e7d32;
            font-size: 26px;
            font-weight: 600;
            margin-bottom: 20px;
        }

        /* ----------------- CARDS ----------------- */
        .card {
            border-radius: 14px;
            border: none;
            box-shadow: 0 3px 10px rgba(0,0,0,0.07);
        }

        /* ----------------- BUTTONS ----------------- */
        .btn-success {
            background-color: #2e7d32 !important;
            border-color: #2e7d32 !important;
        }

            .btn-success:hover {
                background-color: #1b5e20 !important;
            }

        /* ----------------- STATUS BADGES ----------------- */
        .status-badge {
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 600;
        }

        .status-approved {
            background: #c8e6c9;
            color: #2e7d32;
        }

        .status-rejected {
            background: #ffcdd2;
            color: #c62828;
        }

        .status-pending {
            background: #fff9c4;
            color: #f9a825;
        }

        /* FILTER BOX */
        .filter-box {
            background: white;
            border-left: 4px solid #2e7d32;
            border-radius: 10px;
            padding: 15px;
            box-shadow: 0 3px 10px rgba(0,0,0,0.06);
        }
    </style>

    @RenderSection("Styles", required: false)
</head>

<body>

    <!-- NAVBAR -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-custom mb-3">
            <div class="container-fluid">

                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    XFit
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#mainNavbar" aria-controls="mainNavbar">
                    <i class="bi bi-list text-white fs-3"></i>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">

                    <ul class="navbar-nav me-auto">

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        
                        
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="FitnessCenters" asp-action="Index">Fitness Centers</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Services" asp-action="Index">Services</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Trainers" asp-action="Index">Trainers</a>
                            </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Appointments" asp-action="Index">Appointments</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="AiFitness" asp-action="Index">
                                    Yapay Zekâ Fitness
                                </a>
                            </li>
                        }
                            
                        
                        

                    </ul>

                    <ul class="navbar-nav ms-auto">

                        @if (User.Identity.IsAuthenticated)
                        {
                            <!-- PROFIL -->
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index">
                                    Profil
                                </a>
                            </li>

                            <!-- ÇIKIŞ -->
                            <li class="nav-item">
                                <form asp-area="Identity" asp-page="/Account/Logout" method="post">
                                    <button class="btn nav-link text-white" type="submit">Çıkış</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <!-- GİRİŞ YAP -->
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login">
                                    Giriş Yap
                                </a>
                            </li>

                            <!-- KAYIT OL -->
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Register">
                                    Kayıt Ol
                                </a>
                            </li>
                        }

                    </ul>


                </div>
            </div>
        </nav>
    </header>


    @if (ViewData["FullScreen"] as bool? == true)
    {
        @RenderBody()
    }
    else
    {
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    }


    


    <!-- JS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>


